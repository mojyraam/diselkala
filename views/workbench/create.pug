extends ../layout
block append script
    script(src='./javascripts/comma.js')
block content
    .container
        form(method='POST' action='/workbench/save')
            .containerinfo
                p.text-danger.text-center مشخصات اصلی محصول
                .row.mt-2.mb-2
                    .col-md-3.pr-5
                        label(for="name") نام:
                    .col-md-3.pl-5
                        textarea#name.form-control(name="name" required="is required" oninvalid="setCustomValidity('لطفا نام محصول را وارد کنید')" oninput="setCustomValidity('')" maxlength="50")
                    .col-md-3.pr-5
                        label(for="price") قیمت:
                    .col-md-3.pl-5
                        input#price.form-control(type="text" name="price" required="is required" oninvalid="this.setCustomValidity('لطفا قیمت محصول را وارد نمایید')" oninput="setCustomValidity('')" maxlength="50")
                .row.mt-2.mb-2
                    .col-md-3.pr-5
                        label(for="branch") شاخه:
                    .col-md-9.pl-5
                        select#branch.form-control(name="branch" required)
                            each item in branch
                                option(value=item.code) #{item.name}
                .row.mt-4.mb-4
                    .col-md-3.pr-5
                        label(for="productcode") کد محصول:
                    .col-md-3.pl-5
                        textarea#productcode.form-control(name="productcode" required="is required" oninvalid="setCustomValidity('لطفا کد محصول را وارد نمایید')" oninput="setCustomValidity('')" maxlength="50")
                    .col-md-3.pr-5
                        label(for="imagea") عکس اول:
                    .col-md-3.pl-5
                        textarea#imagea.form-control(name="imagea" required="is required" oninvalid="this.setCustomValidity('ورود کد عکس اول الزامی است')" oninput="setCustomValidity('')" maxlength="50")
                .row.mt-4.mb-4
                    .col-md-3.pr-5
                        label(for="imageb") عکس دوم:
                    .col-md-3.pl-5
                        textarea#imagea.form-control(name="imageb" required="is required" oninvalid="this.setCustomValidity('ورود کد عکس دوم الزامی است')" oninput="setCustomValidity('')" maxlength="50")
                    .col-md-3.pr-5
                        label(for="imagec") عکس سوم:
                    .col-md-3.pl-5
                        textarea#imagea.form-control(name="imagec" required="is required" oninvalid="this.setCustomValidity('ورود کد عکس سوم الزامی است')" oninput="setCustomValidity('')" maxlength="50")
                .row.mt-4.mb-4
                    .col-md-3.pr-5
                        label(for="imaged") عکس چهارم:
                    .col-md-3.pl-5
                        textarea#imagea.form-control(name="imaged" required="is required" oninvalid="this.setCustomValidity('ورود کد عکس چهارم الزامی است')" oninput="setCustomValidity('')" maxlength="50")
                    .col-md-3.pr-5
                        label(for="imagee") عکس پنجم:
                    .col-md-3.pl-5
                        textarea#imagea.form-control(name="imagee" required="is required" oninvalid="this.setCustomValidity('ورود کد عکس پنجم الزامی است')" oninput="setCustomValidity('')" maxlength="50")
                .row.mt-2.mb-2
                    .col-md-3.pr-5
                        label(for="description") توضیحات:
                    .col-md-9.pl-5
                        textarea#description.form-control(name="description" required="is required" oninvalid="this.setCustomValidity('لطفا توضیحات محصول را وارد نمایید')" oninput="setCustomValidity('')" maxlength="500")
            br
            .containerinfo
                p.text-danger.text-center قیمت قطعات
                .row.mt-4.mb-4
                    .col-md-3.pr-5
                        label(for="blocksilandr") بلوک سیلندر:
                    .col-md-3.pl-5
                        input#blocksilandr.form-control(type="text" name="blocksilandr" maxlength="50")
                    .col-md-3.pr-5
                        label(for="silandr") سیلندر:
                    .col-md-3.pl-5
                        input#silandr.form-control(type="text" name="silandr" maxlength="50")
                .row.mt-4.mb-4
                    .col-md-3.pr-5
