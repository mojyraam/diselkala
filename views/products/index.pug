extends ../layout
block append script
block content
  .container
    table.table.table-striped(style='text-align: center;')
      tr
        th(scope='col') name
        th(scope='col') description
        th(scope='col') price
        th(scope='col') operations
      for item in products
        tr
          td #{item.name}
          td #{item.description}
          td #{item.price}$
          td
            form(action='/products/delete/'+item._id method='post')
              a.menuitem(href='/products/show/'+ item._id style='text-decoration: none; margin-right: 2%;') show
              button.btn-danger.linkbutton(type='submit' style='width: 20%; height: 30px; padding: 0px; margin-left: 2%;') delete
      else
        tr 
          td no products found!
          td no products found!
          td no products found!
          td no products found!
    .buttons
      a.btn-success.linkbutton(href='/products/create') Create Product